{% set page = { title: 'Тендеры | Верба Капитал' } %}
{% extends "./2.parts/main.njk" %}
{% block content %}
    {% set  _ = 'back' %}
    <div href="#" class="{{ _ }}">
        <div class="inner-container">
            <a href="#" class="{{ _ }}__ancor">
                <svg width="25" height="13" viewBox="0 0 25 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M24 6.5L1 6.5M1 6.5L6.88235 12.5M1 6.5L6.88235 0.499999" stroke="#D4D4D4"
                          stroke-linecap="round"/>
                </svg>
                Назад
            </a>
        </div>
    </div>

    {% set  _ = 'tenders' %}
    <div class="{{ _ }}">
        <div class="inner-container">
            <div class="{{ _ }}__wrap">
                <h2 class="h2 animation-element">ТЕНДЕРЫ</h2>
                <div class="{{ _ }}__tables">
                    <div class="{{ _ }}__tabs">
                        <a href="#" class="{{ _ }}__tab h4 active">
                            ТЕКУЩИЕ
                        </a>
                        <a href="#" class="{{ _ }}__tab h4">
                            Завершенные
                        </a>
                    </div>
                    <div class="{{ _ }}__list">
                        <div class="{{ _ }}__item active">
                            <div class="{{_}}__table-wrap">
                                <div class="{{ _ }}__table table animation-element">
                                    <table>
                                        <thead>
                                        <tr>
                                            <th>Объект</th>
                                            <th>Наименование тендера</th>
                                            <th>Сроки тендера</th>
                                            <th>Сроки выполнения работ</th>
                                            <th>Документация и файлы</th>
                                            <th>Победитель</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for i in range(1, 4) %}
                                            <tr style="animation-delay: {{ i * 0.4 }}s">
                                                <td>Инские холмы</td>
                                                <td>Поставка и монтаж вентоборудования для здания 4й очереди проекта Инские
                                                    холмы
                                                </td>
                                                <td>11.11.2024 - 01.12.2024</td>
                                                <td>09.09.2025 - 31.12.2025</td>
                                                <td><a href="#">Скачать документ</a></td>
                                                <td>ООО «Стройпарк»</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>

                                    </table>
                                </div>

                            </div>
                        </div>
                        <div class="{{ _ }}__item">
                            <div class="{{_}}__table-wrap">
                                <div class="{{ _ }}__table table animation-element">
                                    <table>
                                        <thead>
                                        <tr>
                                            <th>Объект</th>
                                            <th>Наименование тендера</th>
                                            <th>Сроки тендера</th>
                                            <th>Сроки выполнения работ</th>
                                            <th>Документация и файлы</th>
                                            <th>Победитель</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for i in range(1, 4) %}
                                            <tr style="animation-delay: {{ i * 0.4 }}s">
                                                <td>{{ i * 1111 }}</td>
                                                <td>{{ i * 1111 }}</td>
                                                <td>{{ i * 1111 }}</td>
                                                <td>{{ i * 1111 }}</td>
                                                <td>{{ i * 1111 }}</td>
                                                <td>{{ i * 1111 }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>

                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


{% endblock content %}